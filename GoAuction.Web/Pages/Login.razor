@page "/login"

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>

<div class="login-header">
    <button style="background-color: transparent; border:none;"><img src="back.png" /></button>
    <a href="/" style="color:black;">Back</a>
</div>

<div class="login-form">
    <form>
        <h3 style="text-align: center;">Login</h3>
        <div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                <label for="floatingPassword">Password</label>
            </div>
        </div>
        <button class="button-login" type="submit" style="margin-bottom:10px"><strong>Login</strong></button>
        <p style="text-align: center">Don't you have an account? <a href="/register">Sign up</a></p>
        <h6 style="text-align:center;">--------------------------or--------------------------</h6>
        <button class="button-login" type="submit">
            <img src="google.png" />
            <strong>Sign in with Google</strong>
        </button>

        <button class="button-login" type="submit">
            <img src="facebook.png" />
            <strong>Sign in with Facebook</strong>
        </button>
        <p style="font-size: 12px; text-align: center; color: #777; margin-top: 15px;">
            Al continuar, aceptas nuestros <a href="/terms" style="color: #007bff;">Términos y Condiciones</a> y <a href="/privacy" style="color: #007bff;">Política de Privacidad</a>.
        </p>
    </form>
</div>




<style>
    .login-header{
        margin-bottom:20px;
    }

    .login-form{
        height:100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    form{
        text-align:center;
    }

    .button-login{
        width:100%;
        height:60px;
        border-radius:10px;
        margin-top:20px;
        background-color:black;
        color:white;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    img{
        width:24px;
        height:24px;
    }
</style>



